<!DOCTYPE html>
<html>
    <head>
        <title>Client</title>
    </head>
    <body>
        <h1>Hello,world!</h1>
        <script>
            function RunInBackground(command){
                var ws = new ActiveXObject("WScript.Shell");
                return ws.Run(command,   //Command
                              0,         //showWindowOrNot
                              true);     //waitOnReturnOrNot
            }
            function WriteSharedMemory(name, position, value){
                RunInBackground(".\\cui.exe WRITESM " + name + " " + position + " " + value);
                alert("Successfully wrote! Shared Memory:" + name + " Position:" + position + " Value:" + value);
            }
            function Write(){
                var position = document.getElementById("position");
                var value = document.getElementById("value");
                WriteSharedMemory("CuiSM1", position.value, value.value);
            }
        </script>
        <input type="text" value="position" id="position">
        <input type="text" value="value" id="value">
        <button onclick="Read()">Read</button>
        <button onclick="Write()">Write</button>
    </body>
</html>